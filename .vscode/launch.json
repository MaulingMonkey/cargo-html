{
    "version": "0.2.0",
    "configurations": [
        // hello-world
        {
            "name":                     "hello-world • debug",
            "type":                     "chrome",
            "request":                  "launch",
            "preLaunchTask":            "cargo html -p hello-world",
            "url":                      "${workspaceFolder}/target/wasm32-wasi/debug/hello-world.html",
        },
        {
            "name":                     "hello-world • release",
            "type":                     "chrome",
            "request":                  "launch",
            "preLaunchTask":            "cargo html -p hello-world --release",
            "url":                      "${workspaceFolder}/target/wasm32-wasi/release/hello-world.html",
        },



        // goodbye-world
        {
            "name":                     "goodbye-world • debug",
            "type":                     "chrome",
            "request":                  "launch",
            "preLaunchTask":            "cargo html -p goodbye-world",
            "url":                      "${workspaceFolder}/target/wasm32-wasi/debug/goodbye-world.html",
        },
        {
            "name":                     "goodbye-world • release",
            "type":                     "chrome",
            "request":                  "launch",
            "preLaunchTask":            "cargo html -p goodbye-world --release",
            "url":                      "${workspaceFolder}/target/wasm32-wasi/release/goodbye-world.html",
        },



        // wasm-bindgen-world
        {
            "name":                     "wasm-bindgen-world • debug",
            "type":                     "chrome",
            "request":                  "launch",
            "preLaunchTask":            "cargo html -p wasm-bindgen-world",
            "url":                      "${workspaceFolder}/target/wasm32-unknown-unknown/debug/wasm_bindgen_world.html",
        },
        {
            "name":                     "wasm-bindgen-world • release",
            "type":                     "chrome",
            "request":                  "launch",
            "preLaunchTask":            "cargo html -p wasm-bindgen-world --release",
            "url":                      "${workspaceFolder}/target/wasm32-unknown-unknown/release/wasm_bindgen_world.html",
        },



        // cargo-html
        {
            "name":                     "cargo-html • debug",
            "type":                     "cppdbg",
            "request":                  "launch",
            "internalConsoleOptions":   "openOnSessionStart",
            "preLaunchTask":            "cargo build --package cargo-html --bin cargo-html",
            "program":                  "${workspaceFolder}/target/debug/cargo-html",
            "cwd":                      "${workspaceFolder}",
            "environment":              [ { "name": "RUST_BACKTRACE", "value": "1" } ],
            "windows": {
                "type":                     "cppvsdbg",
                "program":                  "${workspaceFolder}/target/debug/cargo-html.exe",
                "enableDebugHeap":          true,
            }
        },
        {
            "name":                     "cargo-html • release",
            "type":                     "cppdbg",
            "request":                  "launch",
            "internalConsoleOptions":   "openOnSessionStart",
            "preLaunchTask":            "cargo build --package cargo-html --bin cargo-html --release",
            "program":                  "${workspaceFolder}/target/release/cargo-html",
            "cwd":                      "${workspaceFolder}",
            "environment":              [ { "name": "RUST_BACKTRACE", "value": "1" } ],
            "windows": {
                "type":                     "cppvsdbg",
                "program":                  "${workspaceFolder}/target/release/cargo-html.exe",
                "enableDebugHeap":          false,
            }
        },
    ]
}
