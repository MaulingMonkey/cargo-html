{
    "version": "2.0.0",
    "problemMatcher": "$rustc",
    "tasks": [
        // entry points
        {
            "label":            "default-build",
            "dependsOrder":     "sequence",
            "dependsOn":        [ "build" ],
            "group":            { "kind": "build", "isDefault": true }
        },
        {
            "label":            "check-file",
            "dependsOrder":     "sequence",
            "dependsOn":        [ "check" ],
            "group":            "build",
        },



        // fetch
        {
            "label":            "fetch",
            "dependsOn":        [
                "cargo fetch",
            ]
        },
        {
            "label":            "cargo fetch",
            "command":          "cargo fetch",
            "type":             "shell",
            "presentation":     { "clear": true, "group": "fetch", "reveal": "always" },
        },



        // check
        {
            "label":            "check",
            "command":          "cargo c",
            "type":             "shell",
            "presentation":     { "clear": true, "group": "check", "reveal": "always" },
            "problemMatcher":   { "base": "$rustc", "owner": "check", "source": "check" },
        },



        // build
        {
            "label":            "build",
            "command":          "cargo b",
            "type":             "shell",
            "presentation":     { "clear": true, "group": "build", "reveal": "always" },
            "problemMatcher":   { "base": "$rustc", "owner": "build", "source": "build" },
        },



        // install
        {
            "label":            "install",
            "command":          "cargo i",
            "type":             "shell",
            "presentation":     { "clear": true, "group": "install", "reveal": "always" },
            "problemMatcher":   { "base": "$rustc", "owner": "install", "source": "install" },
        },



        // doc
        {
            "label":            "doc",
            "command":          "cargo d --no-deps -p cargo-html",
            "type":             "shell",
            "presentation":     { "clear": true, "group": "doc", "reveal": "always" },
            "problemMatcher":   { "base": "$rustc", "owner": "doc", "source": "doc" },
        },



        // help
        {
            "label":            "help",
            "command":          "cargo d --no-deps -p cargo-html --open",
            "type":             "shell",
            "presentation":     { "clear": true, "group": "doc", "reveal": "always" },
            "problemMatcher":   { "base": "$rustc", "owner": "doc", "source": "doc" },
        },



        // cargo-html
        {
            "label":            "cargo b --bin cargo-html",
            "command":          "cargo b --bin cargo-html",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo b --bin cargo-html --release",
            "command":          "cargo b --bin cargo-html --release",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "open repository (cargo-html)",
            "windows":          { "command": "start \"\"    \"https://github.com/MaulingMonkey/cargo-html\"" },
            "linux":            { "command": "xdg-open      \"https://github.com/MaulingMonkey/cargo-html\"" },
            "osx":              { "command": "open          \"https://github.com/MaulingMonkey/cargo-html\"" },
            "type":             "shell",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "silent" },
        },
        {
            "label":            "open documentation (cargo-html)",
            "windows":          { "command": "start \"\"    \"https://docs.rs/cargo-html\"" },
            "linux":            { "command": "xdg-open      \"https://docs.rs/cargo-html\"" },
            "osx":              { "command": "open          \"https://docs.rs/cargo-html\"" },
            "type":             "shell",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "silent" },
        },



        // cargo-web-world
        {
            "label":            "cargo html -p cargo-web-world",
            "command":          "cargo +1.47.0 html -p cargo-web-world",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo html -p cargo-web-world --release",
            "command":          "cargo +1.47.0 html -p cargo-web-world --release",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },



        // goodbye-world
        {
            "label":            "cargo html -p goodbye-world",
            "command":          "cargo html -p goodbye-world",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo html -p goodbye-world --release",
            "command":          "cargo html -p goodbye-world --release",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },



        // hello-world
        {
            "label":            "cargo html -p hello-world",
            "command":          "cargo html -p hello-world",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo html -p hello-world --release",
            "command":          "cargo html -p hello-world --release",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },



        // wasm-bindgen-world
        {
            "label":            "cargo html -p wasm-bindgen-world",
            "command":          "cargo html -p wasm-bindgen-world",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo html -p wasm-bindgen-world --release",
            "command":          "cargo html -p wasm-bindgen-world --release",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },



        // quicksilver-demo
        {
            "label":            "cargo html -p quicksilver-demo",
            "command":          "cargo +1.47.0 html -p quicksilver-demo",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo html -p quicksilver-demo --release",
            "command":          "cargo +1.47.0 html -p quicksilver-demo --release",
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo build -p quicksilver-demo",
            "command":          "cargo build -p quicksilver-demo",
            "options":          { "cwd": "${workspaceFolder}/examples" },
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
        {
            "label":            "cargo build -p quicksilver-demo --release",
            "command":          "cargo build -p quicksilver-demo --release",
            "options":          { "cwd": "${workspaceFolder}/examples" },
            "type":             "shell",
            "problemMatcher":   "$rustc",
            "presentation":     { "clear": true, "panel": "shared", "reveal": "always" },
        },
    ]
}
